@model IEnumerable<Lab4.Models.TariffPlan>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubscriptionFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocalCallCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LongDistanceCallCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InternationalCallCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillingType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Smscost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mmscost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataTransferCost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubscriptionFee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocalCallCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LongDistanceCallCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InternationalCallCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillingType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Smscost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mmscost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataTransferCost)
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
